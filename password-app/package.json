{
  "name": "password-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "concurrently -c blue,green --names web,api \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "build": "pnpm --filter core build && pnpm --filter api build && pnpm --filter web build",
    "test": "pnpm --filter core test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
